{
  "name": "fabric-layers-core",
  "version": "1.2.0",
  "description": "A fabric.js coordinate-plane (grid) & layers library",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/types/index.d.ts",
  "unpkg": "dist/index.umd.js",
  "files": [
    "dist"
  ],
  "browser": {
    "./dist/index.cjs.js": "./dist/index.umd.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clean": "rimraf dist",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "type-check": "tsc --noEmit",
    "test": "cross-env TS_NODE_PROJECT=./tsconfig.test.json mocha --require ts-node/register --require ./test/setup.ts ./test/*.spec.ts",
    "test:watch": "npm test -- --watch",
    "test:coverage": "cross-env TS_NODE_PROJECT=./tsconfig.test.json nyc mocha --require ts-node/register --require ./test/setup.ts",
    "build": "npm run clean && npm run type-check && rollup -c rollup.config.mjs",
    "build:watch": "rollup -c rollup.config.mjs -w",
    "start": "webpack serve --mode=development --open",
    "prepublishOnly": "npm run build",
    "prepare": "npm run build",
    "release": "standard-version",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "validate-types": "tsc --noEmit test/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ajoslin103/fabric-layers-core.git"
  },
  "keywords": [
    "fabric.js",
    "canvas",
    "grid",
    "coordinate-plane",
    "layers",
    "axis",
    "polar",
    "cartesian"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ajoslin103/fabric-layers-core/issues"
  },
  "homepage": "https://github.com/ajoslin103/fabric-layers-core#readme",
  "devDependencies": {
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/chai": "^4.3.11",
    "@types/jsdom": "^21.1.7",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.19.9",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "chai": "^4.3.10",
    "conventional-changelog-cli": "^2.2.2",
    "core-js": "^3.35.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "jsdom": "^26.1.0",
    "mocha": "^10.4.0",
    "nyc": "^15.1.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "rollup": "^4.13.2",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "webpack": "^5.89.3",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@types/fabric": "^5.3.10",
    "eventemitter2": "^6.4.9",
    "fabric": "^5.3.0-browser"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "test/**/*"
    ],
    "reporter": [
      "html",
      "text"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
